    "roots": [
      "app"
    ]
  },
  "standard": {
    "env": [
      "jest"
    ],
    "globals": [
      "$",
      "history",
      "zE",
      "CustomEvent"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-gds/scss",
    "rules": {
      "value-keyword-case": [
        "lower",
        {
          "camelCaseSvgKeywords": true
        }
      ]
    }
  }
