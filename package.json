{
  "name": "apply-for-teacher-training",
  "private": true,
  "engines": {
    "node": "^16.13.0",
    "yarn": "^1.22.0"
  },
  "dependencies": {
    "@ministryofjustice/frontend": "^1.4.2",
    "@rails/webpacker": "^5.4.3",
    "accessible-autocomplete": "^2.0.4",
    "dfe-autocomplete": "github:DFE-Digital/dfe-autocomplete",
    "govuk-frontend": "^4.2.0",
    "jquery": "^3.6.0",
    "postcss": "^8.4.14"
  },
  "devDependencies": {
    "axe-core": "^4.4.2",
    "cypress": "^9.7.0",
    "cypress-axe": "^0.14.0",
    "jest": "^28.1.2",
    "jest-environment-jsdom": "^28.1.2",
    "notifications-node-client": "^5.1.1",
    "prettier": "^2.7.1",
    "standard": "^17.0.0",
    "stylelint": "^14.9.1",
    "stylelint-config-gds": "^0.2.0"
  },
  "scripts": {
    "lint": "standard 'app/frontend/packs'",
    "test": "jest",
    "smoke-test": "cypress run --spec \"cypress/integration/*.spec.js\""
