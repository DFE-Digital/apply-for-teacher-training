<% if application_can_submit? %>
  <%= form.govuk_collection_radio_buttons :submit_answer,
      form.object.options,
      :answer,
      :name,
      :description,
      bold_labels: false,
      legend: { text: t('application_form.continuous_applications.courses.submit'), size: 'm' }, link_errors: true %>

  <%= form.govuk_submit t('continue') %>
<% else %>
  <% errors.each do |error| %>
    <% error.message.split(/\n+/).each_with_indes do |idx, line| %>
      <% if error.type == :immigration_status %>
        <% if idx == 0 %>
          <%= govuk_warning_text do %>
            <%= error.message %>.
          <% end %>
        <% else %>
          <p class="govuk-body"><%= line.html_safe %></p>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
