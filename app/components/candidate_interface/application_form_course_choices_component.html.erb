<section class="govuk-!-margin-bottom-8">
  <h2 class="govuk-heading-m govuk-!-font-size-27"><%= t('section_groups.courses') %></h2>

  <% unless can_add_more_choices? %>
    <p class="govuk-body"><%= t('application_form.courses.intro') %></p>
  <% end %>

  <ol class="app-task-list">
    <li class="app-task-list__item">
      <%= render(TaskListItemComponent.new(
        text: t('section_items.choose_courses'),
        completed: completed?,
        path: view_courses_path,
      )) %>
    </li>
  </ol>
</section>
