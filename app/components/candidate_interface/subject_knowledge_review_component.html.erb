<% if show_missing_banner? %>
  <%= render(
    CandidateInterface::IncompleteSectionComponent.new(
      section: :subject_knowledge,
      section_path: candidate_interface_edit_subject_knowledge_path,
      error: @missing_error,
      review_needed: review_needed?,
    ),
  ) %>
<% else %>
  <div class="app-summary-card govuk-!-margin-bottom-6">
    <% if @editable %>
      <div class="app-summary-card__header govuk-body">
        <%= govuk_link_to 'Edit your answer', candidate_interface_edit_subject_knowledge_path(return_to_params) %>
      </div>
    <% end %>
    <div class="app-summary-card__body">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-three-quarters-from-desktop">
          <%= simple_format(@subject_knowledge_form.subject_knowledge, class: 'govuk-body') %>
        </div>
      </div>
    </div>
  </div>
<% end %>
