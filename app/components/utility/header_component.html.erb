<%= govuk_header(
  classes: "govuk-!-display-none-print #{classes}",
  homepage_url: homepage_url,
  service_name: service_name,
  service_url: service_link,
  navigation_classes: navigation_classes,
  navigation_label: 'Header menu',
) do |header| %>
  <% header.product_name do %>
    <%= product_name %>
    <%= phase_tag ? govuk_tag(text: HostingEnvironment.phase, colour: HostingEnvironment.phase_colour) : nil %>
  <% end %>
  <% header.with_navigation_items(navigation_items.map(&:to_h)) %>
<% end %>
