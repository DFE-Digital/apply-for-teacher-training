<%= render RecruitmentPerformanceReport::SubjectTableComponent.new(
  @provider,
  table_caption: 'candidates_rejected',
  subject_rows: @row_builder.subject_rows,
  summary_row: @row_builder.summary_row,
) do %>
  <span>
    <p class="govuk-body">
      <%= t('.number_of_rejected_candidates', provider_name: @provider.name) %>
    </p>
    <p class="govuk-body">
      <%= t('.you_can_compare_the_data_to') %>
    </p>
    <%= govuk_list([t('.last_cycle'), t('.national_data')], type: :bullet) %>
    <p class="govuk-body">
      <%= t('.candidates_rejected_and_awaiting_decisions', provider_name: @provider.name) %>
    </p>
  </span>
<% end %>
