<section class="govuk-!-margin-bottom-8">
  <h2 class="govuk-heading-m govuk-!-font-size-27"><%= t('page_titles.previous_teacher_training') %></h2>
  <div class="app-summary-card govuk-!-margin-bottom-6">
    <div class="app-summary-card__body">
      <%= govuk_summary_list do |summary_list| %>
        <% summary_list.with_row do |row| %>
          <% row.with_key { t('candidate_interface.previous_teacher_trainings.review.show.started_teacher_training') } %>
          <% row.with_value { previous_teacher_training.started&.capitalize } %>
        <% end %>

        <% if previous_teacher_training.started_yes? %>
          <% summary_list.with_row do |row| %>
            <% row.with_key { t('candidate_interface.previous_teacher_trainings.review.show.provider_name') } %>
            <% row.with_value { previous_teacher_training.provider_name } %>
          <% end %>

          <% summary_list.with_row do |row| %>
            <% row.with_key { t('candidate_interface.previous_teacher_trainings.review.show.training_dates') } %>
            <% row.with_value { previous_teacher_training.formatted_dates } %>
          <% end %>

          <% summary_list.with_row do |row| %>
            <% row.with_key { t('candidate_interface.previous_teacher_trainings.review.show.details') } %>
            <% row.with_value { simple_format(previous_teacher_training.details) } %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</section>
