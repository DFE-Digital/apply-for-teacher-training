<table class="govuk-table">
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th scope="col" class="govuk-table__header">Event</th>
      <th scope="col" class="govuk-table__header">Date</th>
      <th scope="col" class="govuk-table__header">Description</th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">
    <% timetable.each do |event| %>
      <tr class="govuk-table__row">
        <th scope="row" class="govuk-table__header"><%= event.name %></th>
        <td class="govuk-table__cell"><%= event.date %></td>
        <td class="govuk-table__cell"><%= event.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
