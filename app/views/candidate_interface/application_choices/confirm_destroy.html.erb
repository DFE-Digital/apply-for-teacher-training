<% content_for :title, t('page_titles.destroy_course_choice') %>
<% content_for :before_content, govuk_back_link_to(candidate_interface_course_choices_review_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @course_choice, url: candidate_interface_confirm_destroy_course_choice_path(@course_choice.id), method: :delete do |f| %>
      <h1 class="govuk-heading-xl">
        <span class="govuk-caption-xl">Course choices</span>
        <%= t('page_titles.destroy_course_choice') %>
      </h1>

      <%= f.govuk_submit t('application_form.courses.confirm_delete'), warning: true %>

      <p class="govuk-body">
        <%= govuk_link_to 'Cancel', candidate_interface_course_choices_review_path %>
      </p>
    <% end %>
  </div>
</div>
