<% content_for :title, t('.title') %>
<%# govuk_back_link(href: provider_interface_candidate_pool_root_path(@candidate)) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: current_candidate, url: candidate_interface_pool_opt_in_path do |f| %>
      <%= f.govuk_error_summary %>

      <h1 class="govuk-heading-l"><%= t('.title') %></h1>
      <h1 class="govuk-heading-l"><%= current_candidate.id %></h1>

      <p class="govuk-body"><%= t('.body') %></p>

      <%= f.govuk_radio_buttons_fieldset :pool_status, legend: { text: t('.pool_status'), size: 'm' } do %>
        <%= f.govuk_radio_button :pool_status, :opt_in, label: { text: 'Yes' }, link_errors: true %>
        <%= f.govuk_radio_button :pool_status, :opt_out, label: { text: 'No' } %>
      <% end %>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>
