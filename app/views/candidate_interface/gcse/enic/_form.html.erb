<%= f.govuk_error_summary %>

<h1 class="govuk-heading-xl">
  <%= t('gcse_edit_enic.page_title', subject: @subject.capitalize) %>
</h1>

<p class="govuk-body"><%= t('gcse_edit_enic.apply_enic') %></p>
<p class="govuk-body"> <%= govuk_link_to(t('gcse_edit_enic.enic_link'), t('service_name.enic.statement_of_comparability_url')) %></p>
<p class="govuk-body"> <%= t('gcse_edit_enic.percentage_text_html') %></p>
<p class="govuk-body"> <%= t('gcse_edit_enic.enic_cost') %></p>

<%= f.govuk_radio_buttons_fieldset :enic_details, legend: { text: t('application_form.gcse.enic_statement.label'), size: 'm' } do %>
  <%= f.govuk_radio_button :enic_reason, t('gcse_edit_enic.yes_enic'), label: { text: t('gcse_edit_enic.yes_enic') }, link_errors: true %>
  <%= f.govuk_radio_button :enic_reason, t('gcse_edit_enic.waiting_for_enic'), label: { text: t('gcse_edit_enic.waiting_for_enic') } %>
  <%= f.govuk_radio_button :enic_reason, t('gcse_edit_enic.future_enic'), label: { text: t('gcse_edit_enic.future_enic') } %>
  <%= f.govuk_radio_button :enic_reason, t('gcse_edit_enic.dont_want_enic'), label: { text: t('gcse_edit_enic.dont_want_enic') } %>
<% end %>

<%= f.govuk_submit t('save_and_continue') %>
