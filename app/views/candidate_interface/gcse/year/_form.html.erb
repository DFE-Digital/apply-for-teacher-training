<% else %>
  <%= f.govuk_text_field :award_year, label: { text: t('application_form.gcse.award_year.label'), size: 'm' }, hint: { text: t('application_form.gcse.award_year.hint_text') }, width: 4, maxlength: 4 %>
<% end %>

<%= f.govuk_submit t('save_and_continue') %>
