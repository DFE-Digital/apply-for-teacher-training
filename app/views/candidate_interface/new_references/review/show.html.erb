<% content_for :title, t('page_titles.new_references') %>
<% content_for :before_content, govuk_back_link_to(candidate_interface_application_form_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">
      <%= t('page_titles.new_references') %>
    </h1>

    <%= render CandidateInterface::AddNewReferenceComponent.new(current_application) %>

    <% if @references_waiting_to_be_sent.present? %>
      <div id="references_waiting_to_be_sent">
        <%= render(CandidateInterface::NewReferencesReviewComponent.new(references: @references_waiting_to_be_sent, show_history: true, heading_level: 3)) %>
      </div>
    <% end %>
  </div>
</div>

<%= govuk_link_to t('continue'), candidate_interface_application_form_path, class: 'govuk-button' %>
