<% content_for :title, title_with_error_prefix(t('page_titles.new_references_name'), @reference_name_form.errors.any?) %>
<% content_for(:before_content, govuk_back_link_to(name_previous_path(application_choice: @application_choice, referee_type: params[:referee_type], reference_id: params[:id], step: reference_workflow_step))) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with(
      model: @reference_name_form,
      url: references_name_path(
        application_choice: @application_choice,
        referee_type: params[:referee_type],
        reference_id: params[:id],
        step: reference_workflow_step,
      ),
      method: :patch,
    ) do |f| %>
      <%= render 'shared_form', f: f %>
    <% end %>
  </div>
</div>
