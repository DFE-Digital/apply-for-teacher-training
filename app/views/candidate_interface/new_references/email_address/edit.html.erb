<% content_for :title, title_with_error_prefix(t('page_titles.new_references_email_address', referee_name: @reference.name), @reference_email_address_form.errors.any?) %>
<% content_for :before_content, govuk_back_link_to(@edit_backlink) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with(
      model: @reference_email_address_form,
      url: candidate_interface_new_references_edit_email_address_path(@reference.id, return_to: params[:return_to]),
      method: :patch,
      html: { novalidate: true },
    ) do |f| %>
      <% render 'shared_form', f: f %>
    <% end %>
  </div>
</div>
