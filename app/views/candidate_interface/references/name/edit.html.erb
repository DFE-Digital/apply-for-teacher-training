<% content_for :title, title_with_error_prefix(t('page_titles.references_edit_name'), @wizard.current_step.errors.any?) %>
<% content_for :before_content, govuk_back_link_to(@edit_backlink) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with(
      model: @wizard.current_step,
      url: candidate_interface_references_edit_name_path(
        @reference_process,
        @reference,
        params: {
          application_id: @application_choice&.id,
          return_to_path: params[:return_to_path],
        }
      ),
      method: :patch,
    ) do |f| %>
      <%= render 'shared_form', f: f %>
    <% end %>
  </div>
</div>
