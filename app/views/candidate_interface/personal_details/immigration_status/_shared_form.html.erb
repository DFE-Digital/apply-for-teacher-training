<%= f.govuk_error_summary %>

<% if @form.eu_nationality? %>
  <%= f.govuk_radio_buttons_fieldset(
    :immigration_status,
    legend: { text: t('page_titles.immigration_status'), size: 'l' },
  ) do %>
    <%= f.govuk_radio_button :immigration_status, 'eu_settled', label: { text: 'EU settled status' }, link_errors: true %>
    <%= f.govuk_radio_button :immigration_status, 'eu_pre_settled', label: { text: 'EU pre-settled status' } %>
    <%= f.govuk_radio_button :immigration_status, 'other', label: { text: 'Other' } do %>
      <%= f.govuk_text_field(
        :right_to_work_or_study_details,
        label: { text: 'Enter immigration status' },
        max_words: 200,
        threshold: 90,
      ) %>
    <% end %>
  <% end %>
<% else %>
  <%= f.hidden_field :immigration_status, value: 'other' %>
  <%= f.govuk_text_area(
    :right_to_work_or_study_details,
    label: { text: t('page_titles.immigration_status'), size: 'l' },
    hint: { text: 'Enter your visa type or immigration status. For example, “Student visa, expires 28 August 2025”, “Indefinite leave to remain” or “Family visa”' },
    max_words: 200,
    threshold: 90,
  ) %>
<% end %>

<%= f.govuk_submit t('save_and_continue') %>
