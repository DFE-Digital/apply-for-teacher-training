<%= form_with(model: form, url:, method:) do |f| %>
  <%= f.govuk_error_summary %>

  <%= f.govuk_collection_radio_buttons(
    :started,
    @form.options,
    :value,
    :name,
    bold_labels: false,
    legend: { text: t('candidate_interface.previous_teacher_trainings.start.new.title'), size: 'xl' },
    hint: proc { t('.body') },
  ) %>

  <%= f.govuk_submit %>
<% end %>
