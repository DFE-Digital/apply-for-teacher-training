<%= f.govuk_text_field(
  :name,
  label: { text: 'Assessment name', size: 'm' },
  hint_text: 'For example, CAE (Cambridge Advanced English), Pearson Test of English') %>

<%= f.govuk_text_field(
  :grade,
  label: { text: 'Score or grade', size: 'm' },
  width: 10) %>

<%= f.govuk_text_field(
  :award_year,
  label: { text: 'When did you complete the assessment?', size: 'm' },
  hint_text: 'Give the year, for example: ‘2020’',
  type: :number,
  width: 4) %>

<%= f.govuk_submit t('application_form.complete_form_button') %>
