<% content_for :title, title_with_error_prefix(t('page_titles.degree_enic_reference'), @wizard.errors.any?) %>
<%= content_for :before_content, govuk_back_link_to(@wizard.enic_reference_back_link) %>

<h1 class="govuk-heading-l"><%= t('page_titles.degree_enic_reference') %></h1>

<%= form_with model: @wizard, url: candidate_interface_degree_enic_reference_path do |f| %>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
    <%= f.govuk_error_summary %>

      <%= f.govuk_text_field(
        :enic_reference,
        label: { text: t('application_form.degree.enic_reference.label'), size: 'm' },
        hint: { text: t('application_form.degree.enic_reference.hint_text') },
        spellcheck: false,
      ) %>
      <%= f.govuk_radio_buttons_fieldset(
        :comparable_uk_degree,
        legend: { text: t('application_form.degree.comparable_uk_degree.label'), size: 'm' },
        hint: { text: t('application_form.degree.comparable_uk_degree.hint_text') },
      ) do %>
        <% ApplicationQualification.comparable_uk_degrees.values.each_with_index do |value, i| %>
          <%= f.govuk_radio_button(
            :comparable_uk_degree,
            value,
            label: { text: t("application_form.degree.comparable_uk_degree.values.#{value}") },
            link_errors: i.zero?,
          ) %>
        <% end %>
      <% end %>
    <%= f.govuk_submit t('save_and_continue') %>
  <% end %>
  </div>
</div>
