<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
  <% content_for :title, title_with_error_prefix(t('page_titles.degree_subject'), @wizard.errors.any?) %>
  <% content_for :before_content, govuk_back_link_to(@wizard.international? ? candidate_interface_new_degree_country_path : candidate_interface_new_degree_degree_level_path) %>

  <%= form_with model: @wizard, url: candidate_interface_new_degree_subject_path do |f| %>
    <%= f.govuk_error_summary %>
    <%= f.govuk_fieldset legend: { text: 'What subject is your degree?', size: 'l' } do %>
      <%= f.govuk_text_field :subject, hint: { text: t('application_form.degree.subject.hint') }, label: -> {} %>
      <%= tag.div(id: 'degree-subject-autosuggest', data: { source: @wizard.subjects }) %>
    <% end %>
    <%= f.govuk_submit t('save_and_continue') %>
  <% end %>
  </div>
</div>
