<% content_for :title, t('application_form.submit_application.title') %>
<% content_for :before_content, govuk_back_link_to(candidate_interface_application_review_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with url: candidate_interface_application_submit_path, method: :post do |f| %>
      <h1 class="govuk-heading-xl">
        <%= t('application_form.submit_application.heading') %>
      </h1>

      <p class="govuk-body">
        By sending this application, I confirm that the information given is true, complete and accurate.
      </p>

      <%= f.govuk_submit t('application_form.submit_application.submit_button') %>
    <% end %>
  </div>
</div>
