<% content_for :title, t('page_titles.submitted_application') %>

<% content_for :before_content, govuk_back_link_to(candidate_interface_continuous_applications_details_path, back_link_text, force_text: true) %>

<h1 class="govuk-heading-xl">
  <%= t('page_titles.submitted_application') %>
</h1>

<%= govuk_summary_list do |summary_list| %>
  <% summary_list.with_row do |summary_list_row| %>
    <% summary_list_row.with_key { 'Date submitted' } %>
    <% summary_list_row.with_value { submitted_at_date } %>
  <% end %>
<% end %>

<%= render 'candidate_interface/application_form/review', application_form: @application_form, editable: false %>
