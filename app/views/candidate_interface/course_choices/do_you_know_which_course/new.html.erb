<% content_for :title, title_with_error_prefix(t('page_titles.do_you_know'), @wizard.current_step.errors.any?) %>
<% content_for(:before_content, govuk_back_link_to(@wizard.previous_step_path(fallback: candidate_interface_application_choices_path))) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @wizard.current_step, url: @wizard.current_step_path do |f| %>
      <%= f.govuk_error_summary %>

      <%= f.govuk_radio_buttons_fieldset :answer, legend: { size: 'xl', text: t('page_titles.do_you_know'), tag: 'h1' } do %>
        <%= f.govuk_radio_button :answer, :yes, label: { text: 'Yes, I know where I want to apply' }, link_errors: true %>
        <%= f.govuk_radio_button :answer, :no, label: { text: 'No, I need to find a course' } %>
      <% end %>

      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
