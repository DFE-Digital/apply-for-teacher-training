<% content_for :title, t('page_titles.application_submit_degree_grade_interruption', grade: @required_grade) %>
<% content_for(:before_content, govuk_back_link_to(candidate_interface_application_choices_path)) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-three-quarters">
    <div class="app-grid-column--grey">
      <h1 class="govuk-heading-l"><%= t('review_degree_grade_interruption.header') %></h1>
      <p class="govuk-body">  <%= t('review_degree_grade_interruption.requirement', required_grade: t("review_degree_grade_interruption.required_grades.#{@required_grade}")) %></p>
      <p class="govuk-body"><%= t('review_degree_grade_interruption.your_degree', highest_grade: t("review_degree_grade_interruption.candidate_grades.#{@candidate_highest_grade}")) %></p>
      <p class="govuk-body"><%= t('review_degree_grade_interruption.provider_might_not') %></p>
      <p class="govuk-body"><%= t('review_degree_grade_interruption.if_you_decide_html', link: govuk_link_to(t('review_degree_grade_interruption.search_another'), I18n.t('find_teacher_training.production_url'))) %></p>
    </div>

    <div class="govuk-button-group app-course-choice__confirm-submission">
          <%= govuk_button_to(t('review_degree_grade_interruption.continue_to_submit'), @continue_path, method: :get) %>
          <%= govuk_link_to(t('review_degree_grade_interruption.search_different'), I18n.t('find_teacher_training.production_url')) %>
    </div>
  </div>
</div>
