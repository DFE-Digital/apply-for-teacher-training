<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @wizard, url: provider_interface_reject_path do |f| %>

      <%= f.govuk_error_summary %>

      <h1 class="govuk-heading-l">
        <span class="govuk-caption-l">Reject application - <%= @application_choice.application_form.full_name %></span>
        Tell the candidate why youâ€™re rejecting their application
      </h1>

      <% @wizard.class.configuration.questions.each do |question| %>
        <%= f.govuk_check_boxes_fieldset question.id, legend: nil, form_group: { classes: 'govuk-!-margin-bottom-2' } do %>
          <%= f.govuk_check_box question.id, 'Yes', label: { text: question.label }, link_errors: true do %>
            <%= f.govuk_check_boxes_fieldset question.reasons_id, legend: { text: 'Reasons', size: 's' } do %>
              <% question.reasons.each do |reason| %>
                <%= f.govuk_check_box question.reasons_id,
                  reason.id,
                  label: { text: reason.label },
                  link_errors: true do %>
                  <% if reason.details.present? %>
                    <%= f.govuk_text_area reason.details.id.to_sym, label: { text: reason.details.label }, max_words: 100 %>
                  <% end %>
                <% end %>
              <% end %>
            <% end if question.reasons.present? %>
            <% if question.details.present? %>
              <%= f.govuk_text_area question.details.id.to_sym, label: { text: question.details.label }, max_words: 100 %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

      <%= f.govuk_submit t('continue') %>
    <% end %>
  </div>
</div>
