<% content_for :browser_title, title_with_error_prefix('Give feedback', @application_feedback.errors.any?) %>
<% content_for :before_content, govuk_back_link_to(provider_interface_application_choice_path(@application_choice.id)) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @application_feedback,
      url: provider_interface_application_choice_check_feedback_path(@application_choice.id),
      method: :post do |f| %>

      <%= f.govuk_error_summary %>

      <div class="govuk-form-group">
        <span class="govuk-caption-l"><%= @application_choice.application_form.full_name %></span>
        <%= f.govuk_text_area :rejection_reason,
          label: { text: 'Tell the candidate why their application was unsuccessful', size: 'l' },
          max_words: 200,
          rows: 5 %>
      </div>

      <%= f.govuk_submit 'Continue' %>

      <p class="govuk-body">
      <%= govuk_link_to 'Cancel', provider_interface_application_choice_path(@application_choice.id), class: 'govuk-link--no-visited-state' %>
      </p>
    <% end %>
  </div>
</div>
