<%= content_for :title, t('page_titles.provider.export_hesa_data') %>

<%= breadcrumbs({
  t('page_titles.provider.reports') => provider_interface_reports_path,
  t('page_titles.provider.export_hesa_data') => nil,
}) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">
      <%= t('page_titles.provider.export_hesa_data') %>
    </h1>
    <p class="govuk-body">
      Sex, disability and ethnicity information will be marked as confidential if you do not have permission to view it.
    </p>

    <h2 class="govuk-heading-m">
      <%= RecruitmentCycle.current_year - 1 %> to <%= RecruitmentCycle.current_year %> (current)
    </h2>
    <p class="govuk-body">
      The data will include all candidates who have accepted an offer since <%= CycleTimetable.apply_opens.to_s(:govuk_date) %>.
    </p>
    <p class="govuk-body">
      <%= govuk_link_to "Export data for #{RecruitmentCycle.current_year-1} to #{RecruitmentCycle.current_year} (CSV)", provider_interface_reports_hesa_export_path(RecruitmentCycle.current_year, format: :csv)  %>
  </p>

    <h2 class="govuk-heading-m">
      <%= RecruitmentCycle.current_year - 2 %> to <%= RecruitmentCycle.current_year - 1 %>
    </h2>
    <p class="govuk-body">
      The data will include all candidates who have accepted an offer since <%= CycleTimetable.apply_opens(RecruitmentCycle.current_year-1).to_s(:govuk_date) %>.
    </p>
    <p class="govuk-body">
      <%= govuk_link_to "Export data for #{RecruitmentCycle.current_year-2} to #{RecruitmentCycle.current_year-1} (CSV)", provider_interface_reports_hesa_export_path(RecruitmentCycle.current_year-1, format: :csv)  %>
  </p>
</div>
