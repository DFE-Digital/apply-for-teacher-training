<%= content_for :browser_title, t('page_titles.provider.account') %>

<h1 class="govuk-heading-l"><%= t('page_titles.provider.account') %></h1>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-one-half">

    <h2 class="govuk-heading-m">
      <%= govuk_link_to t('page_titles.provider.profile'), provider_interface_profile_path %>
    </h2>

    <p class="govuk-body">Use this section to:</p>
    <ul class="govuk-list govuk-list--bullet">
      <li>change your name</li>
      <li>change your email address</li>
      <li>change your password</li>
      <li>check your permissions</li>
    </ul>

    <h2 class="govuk-heading-m">
      <%= govuk_link_to t('page_titles.provider.notifications'), provider_interface_notifications_path %>
    </h2>

    <p class="govuk-body">Use this section to choose whether to receive notifications about applications.</p>

  </div>

  <div class="govuk-grid-column-one-half">

    <% if current_provider_user.authorisation.can_manage_users_for_at_least_one_provider? %>
      <h2 class="govuk-heading-m">
        <%= govuk_link_to t('page_titles.provider.users'), provider_interface_provider_users_path %>
      </h2>

      <p class="govuk-body">Use this section to:</p>
      <ul class="govuk-list govuk-list--bullet">
        <li>manage users and their permissions</li>
        <li>invite users</li>
      </ul>
    <% end %>

    <% if current_provider_user.authorisation.can_manage_organisations_for_at_least_one_provider? %>
      <h2 class="govuk-heading-m">
        <%= govuk_link_to t('page_titles.provider.org_permissions'), provider_interface_organisations_path %>
      </h2>

      <p class="govuk-body">Use this section to:</p>
      <ul class="govuk-list govuk-list--bullet">
        <li>set permissions between your organisation and partner organisations</li>
        <li>check permissions between organisations</li>
      </ul>
    <% end %>

  </div>
</div>
