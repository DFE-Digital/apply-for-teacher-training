<%= render 'shared/form_errors_summary', record: @qualification %>

<div class='govuk-grid-row'>
  <div class='govuk-grid-column-two-thirds'>
    <%= form_with model: @qualification, builder: GOVUKDesignSystemFormBuilder::FormBuilder, action: action, html: { novalidate: true } do |f| %>
      <legend class='govuk-fieldset__legend govuk-fieldset__legend--xl'>
        <h1 class='govuk-fieldset__heading'>
          <span class='govuk-caption-xl'>Other qualifications</span>
          <%= page_heading(action, 'qualification') %>
        </h1>
      </legend>

      <%= f.govuk_text_field :type_of_qualification, label: { text: t('application_form.qualification_section.type.label') },
                             hint_text: t('application_form.qualification_section.type.hint_label') %>
      <%= f.govuk_text_field :subject, label: { text: t('application_form.qualification_section.subject.label')} %>
      <%= f.govuk_text_field :institution, label: { text: t('application_form.qualification_section.institution.label')} %>
      <%= f.govuk_text_field :grade, label: { text: t('application_form.qualification_section.grade.label')} %>
      <%= f.govuk_text_field :year, label: { text: t('application_form.qualification_section.year.label')} %>

      <%= f.submit t('application_form.save_and_continue'), class: 'govuk-button' %>
    <% end %>
  </div>
</div>
