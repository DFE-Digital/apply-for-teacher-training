<% content_for :browser_title, title_with_error_prefix('Edit references', @reference.errors.any?) %>
<% content_for :before_content, govuk_back_link_to(support_interface_application_form_path(@reference.application_form)) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @reference, url: support_interface_application_form_update_reference_path do |f| %>
      <%= f.govuk_error_summary %>

      <%= f.govuk_fieldset legend: { text: 'Edit reference', size: 'l' } do %>
        <%= f.govuk_text_field :name, label: { text: t('application_form.references.name.label'), size: 'm' },  autocomplete: 'name' %>
        <%= f.govuk_text_field :email_address, label: { text: t('application_form.references.email_address.label'), size: 'm' }, hint: { text: t('application_form.references.retry_request.email_address.hint_text')},  autocomplete: 'email_addess' %>
        <%= f.govuk_text_field :relationship, label: { text: t('application_form.references.relationship.label'), size: 'm' },  autocomplete: 'relationship' %>
        <%= f.govuk_text_field :feedback, label: { text: t('referee.feedback.label'), size: 'm' }, autocomplete: 'feedback' %>
        <%= f.govuk_text_field :audit_comment, label: { text: 'Audit log comment', size: 'm' }, hint: { text: 'This will appear in the audit log alongside this change. If the change originated in a Zendesk ticket, paste the Zendesk URL here' } %>
      <% end %>

      <%= f.govuk_submit 'Update reference' %>
    <% end %>
  </div>
</div>
