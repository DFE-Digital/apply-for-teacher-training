<% content_for :browser_title, "Are you sure you want to delete all test applications?" %>
<% content_for :before_content, govuk_back_link_to(support_interface_tasks_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: nil, url: support_interface_run_task_path('delete_test_applications') do |f| %>
      <h1 class="govuk-heading-l">Are you sure you want to delete all test applications?</h1>

      <div class="app-styled-content">
        <p>This task deletes all candidates with emails that end in <code>@example.com</code>, their applications and associated data.</p>
      </div>

      <%= f.submit 'Yes, I’m sure – delete all test applications',
        class: 'govuk-button govuk-button--warning',
        data: { module: 'govuk-button' }
      %>

      <p class="govuk-body">
        <%= govuk_link_to 'Cancel', support_interface_tasks_path %>
      </p>
    <% end %>
  </div>
</div>
